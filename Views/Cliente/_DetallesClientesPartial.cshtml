

@if (Model != null)
{
    <div class="card shadow-sm p-3 mb-3 bg-light rounded">
        <h5 class="card-title text-primary">Detalles del Cliente</h5>
        <div class="card-body">
            <p class="card-text"><strong>Nombre:</strong> @Model.Nombre</p>
            <p class="card-text"><strong>Apellido:</strong> @Model.Apellido</p>
            <p class="card-text"><strong>Email:</strong> @Model.Email</p>
            <p class="card-text"><strong>Telefono:</strong> @Model.Telefono</p>
            <p class="card-text"><strong>Numero Documento:</strong> @Model.NrDocumento</p>
            <p class="card-text"><strong>Documento:</strong> @Model.Documento</p>
          
            <button type="button" class="btn btn-sm btn-outline-danger y mt-2" onclick="$('#detallesCliente').empty();">Cerrar Detalles</button>
        </div>
    </div>
}
else
{
    <div class="alert alert-warning" role="alert">
        No se encontraron detalles para este Cliente.
    </div>
}
