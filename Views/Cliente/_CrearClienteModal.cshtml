@model ProyectommstoreConsumido.Models.Clientes

<div class="modal fade custom-modal" id="crearClienteModal" tabindex="-1" role="dialog" aria-labelledby="crearClienteModalLabel" aria-hidden="true">
    <div class="modal-dialog modal-dialog-centered" role="document">
        <div class="modal-content custom-modal-content">
            <div class="modal-header custom-modal-header">
                <h5 class="modal-title" id="crearClienteModalLabel"><i class="bi bi-person-plus-fill me-2"></i> Registrar Nuevo Cliente</h5>
            </div>
            <div class="modal-body custom-modal-body">
                @using (Html.BeginForm("CLIENTE_INSERTADO", "Cliente", FormMethod.Post, new { id = "crearClienteForm" }))
                {
                    @Html.AntiForgeryToken()
                    @Html.ValidationSummary(true, "", new { @class = "text-danger" })

                    <div class="mb-2">
                        <label for="Nombre" class="form-label"><i class="bi bi-person-fill me-2"></i> Nombre</label>
                        @Html.EditorFor(model => model.Nombre, new { htmlAttributes = new { @class = "form-control rounded-pill form-control-sm", placeholder = "Nombre" } })
                        @Html.ValidationMessageFor(model => model.Nombre, "", new { @class = "text-danger" })
                    </div>

                    <div class="mb-2">
                        <label for="Apellido" class="form-label"><i class="bi bi-person-fill me-2"></i> Apellido</label>
                        @Html.EditorFor(model => model.Apellido, new { htmlAttributes = new { @class = "form-control rounded-pill form-control-sm", placeholder = "Apellido" } })
                        @Html.ValidationMessageFor(model => model.Apellido, "", new { @class = "text-danger" })
                    </div>

                    <div class="mb-2">
                        <label for="Email" class="form-label"><i class="bi bi-envelope-fill me-2"></i> Email</label>
                        @Html.EditorFor(model => model.Email, new { htmlAttributes = new { @class = "form-control rounded-pill form-control-sm", type = "email", placeholder = "Email" } })
                        @Html.ValidationMessageFor(model => model.Email, "", new { @class = "text-danger" })
                    </div>

                    <div class="mb-2">
                        <label for="Telefono" class="form-label"><i class="bi bi-telephone-fill me-2"></i> Teléfono</label>
                        @Html.EditorFor(model => model.Telefono, new { htmlAttributes = new { @class = "form-control rounded-pill form-control-sm", placeholder = "Teléfono" } })
                        @Html.ValidationMessageFor(model => model.Telefono, "", new { @class = "text-danger" })
                    </div>

                    <div class="mb-2">
                        <label for="NrDocumento" class="form-label"><i class="bi bi-card-text-fill me-2"></i> Nro. Documento</label>
                        @Html.EditorFor(model => model.NrDocumento, new { htmlAttributes = new { @class = "form-control rounded-pill form-control-sm", type = "number", placeholder = "Nro. Documento" } })
                        @Html.ValidationMessageFor(model => model.NrDocumento, "", new { @class = "text-danger" })
                    </div>

                    <div class="mb-2">
                        <label for="Documento" class="form-label"><i class="bi bi-file-earmark-text-fill me-2"></i> Tipo Documento</label>
                        @Html.DropDownList("Documento", new SelectList(new List<string>()
                        {
                            "DNI",
                            "Pasaporte",
                            "Carnet de Extranjería"
                        }), "Seleccionar Documento", new { @class = "form-select rounded-pill form-select-sm" })
                        @Html.ValidationMessageFor(model => model.Documento, "", new { @class = "text-danger" })
                    </div>

                    <div class="modal-footer custom-modal-footer d-flex justify-content-center gap-3">
                        <button type="submit" class="btn btn-primary rounded-pill btn-lg"><i class="bi bi-save-fill me-2"></i> Registrar</button>
                        <button type="button" data-bs-dismiss="modal" aria-label="Cerrar" class="btn btn-danger rounded-pill btn-lg"><i class="bi bi-x-circle-fill me-2"></i> Cancelar</button>
                    </div>
                }
            </div>
        </div>
    </div>
</div>


<style>
