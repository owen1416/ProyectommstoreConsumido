            }

        .custom-modal-footer .btn-danger {
            background-color: #F44336; /* Un rojo claro */
            border-color: #F44336;
            box-shadow: 0 2px 4px rgba(255, 0, 0, 0.2); /* Misma sombra inicial que el azul */
