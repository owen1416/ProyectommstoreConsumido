                box-shadow: 0 3px 6px rgba(255, 0, 0, 0.2); /* Misma animación de sombra que el azul */
            }

    /* Estilos para los elementos del formulario */
    .form-label {
        font-size: 0.85rem;
        color: #343a40;
        margin-bottom: 0.2rem;
        font-weight: 500;
    }

    .form-control {
        border-radius: 4px;
        border: 1px solid #ced4da;
        font-size: 0.9rem;
        padding: 0.6rem 0.75rem;
    }

        .form-control:focus {
            border-color: #007bff;
            box-shadow: 0 0 0 0.2rem rgba(0, 123, 255, 0.25);
        }

    .text-danger {
        font-size: 0.8rem;
        color: #dc3545;
        margin-top: 0.15rem;
    }

    .d-grid .btn-primary {
        padding: 0.7rem 1.4rem;
        font-size: 0.95rem;
        border-radius: 6px;
    }
</style>