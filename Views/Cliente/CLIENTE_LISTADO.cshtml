@model IEnumerable<ProyectommstoreConsumido.Models.Clientes>

@{
    ViewBag.Title = "CLIENTE_LISTADO";
}

<link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.3/font/bootstrap-icons.min.css">

<div class="content-wrapper">
    <section class="content-header">
        <h1>Mantenimiento de Clientes</h1>
    </section>
    <section class="content">
        <div class="box">
            @* El título principal ya está en el content-header, no necesitamos otro header en el box *@
            <div class="box-body">
                <div class="d-flex justify-content-end mb-3">
                    <button id="btnNuevoCliente" class="btn  rounded-pill btn-sm" style="background-color: #4b0081; color: #e9ecef; border-collapse: collapse; ">  <i class="bi bi-plus-circle-fill me-2"></i> Nuevo Cliente</button>
                </div>
                <div id="detallesCliente">
                </div>
                <div class="table-responsive">
                    <table class="table table-hover">
                        <thead>
                            <tr>
                                <th>ClienteID</th>
                                <th>Nombre</th>
                                <th>Apellido</th>
                                <th>Email</th>
                                <th>Telefono</th>
                                <th>Numero Documento</th>
                                <th>Documento</th>
                                <th class="text-center">Acciones</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var item in Model)
                            {
                                <tr>
                                    <td>@Html.DisplayFor(modelItem => item.ClienteID)</td>
                                    <td>@Html.DisplayFor(modelItem => item.Nombre)</td>
                                    <td>@Html.DisplayFor(modelItem => item.Apellido)</td>
                                    <td>@Html.DisplayFor(modelItem => item.Email)</td>
                                    <td>@Html.DisplayFor(modelItem => item.Telefono)</td>
                                    <td>@Html.DisplayFor(modelItem => item.NrDocumento)</td>
                                    <td>@Html.DisplayFor(modelItem => item.Documento)</td>
                                    <td class="text-center" style="display: flex; align-items: center; justify-content: center; gap: 5px;">
                                        <button type="button" class="btn btn-sm btn-outline-success btnVerDetalles rounded-pill" data-cliente-id="@item.ClienteID"><i class="bi bi-eye me-2"></i></button>
                                        @Html.ActionLink("Editar", "Edit", new { id = item.ClienteID }, new { @class = "btn btn-sm btn-outline-primary rounded-pill me-1", style = "font-size: 0.75rem;" })
                                        @using (Html.BeginForm("CLIENTE_ELIMINADO", "Cliente", new { id = item.ClienteID }, FormMethod.Post, new { @class = "formEliminarCliente" }))
                                        {
                                            @Html.AntiForgeryToken()
                                            <button type="button" class="btn btn-sm btn-outline-danger rounded-pill btnEliminarCliente" data-bs-toggle="modal" data-bs-target="#confirmarEliminarModal">
                                                <i class="bi bi-trash-fill me-1"></i>
                                            </button>
                                        }
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </section>
</div>

<style>
    /* Incluimos aquí los estilos relevantes de tu archivo CSS */
    body {
        font-family: sans-serif;
        background-color: #f4f6f9;
        padding: 20px;
    }

    .content-wrapper {
        background-color: #fff;
        padding: 20px;
        border-radius: 5px;
        box-shadow: 0 0 10px rgba(0, 0, 0, 0.1);
    }

    .content-header h1 {
        color: #333;
        margin-bottom: 20px;
        border-bottom: 2px solid #673ab7;
        padding-bottom: 10px;
    }

    .box {
        background-color: #fff;
        margin-bottom: 20px;
        border-radius: 5px;
        border: 1px solid #ddd;
    }

    .box-body {
        padding: 15px;
    }

    .table {
        width: 100%;
        border-collapse: collapse;
        margin-top: 20px;
        border: 1px solid #ddd;
    }

        .table th, .table td {
            padding: 10px;
            border-bottom: 1px solid #ddd;
            text-align: left;
        }

        .table th {
            background-color: #4b0081; /* Usando tu color morado */
            font-weight: bold;
            color: #fff;
        }

        .table tbody tr:nth-child(odd) {
            background-color: #f9f9f9;
        }

    h1 { /* Aplicando el estilo del h1 de tu referencia al h1 del header */
        color: #333;
        margin-bottom: 20px;
        border-bottom: 2px solid #673ab7;
        padding-bottom: 10px;
    }

    /* Ya no necesitamos el estilo para h3.box-title */
</style>

@Html.Partial("_CrearClienteModal", new ProyectommstoreConsumido.Models.Clientes())

@Html.AntiForgeryToken()
@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")

    <script>
        //js para ventana de registrar producto
        $(document).ready(function () {
            var nuevoClienteBtn = document.getElementById("btnNuevoCliente");
            var crearClienteModal = document.getElementById("crearClienteModal");

            if (nuevoClienteBtn && crearClienteModal) {
                nuevoClienteBtn.addEventListener("click", function () {
                    $(crearClienteModal).modal('show');
                });
            } else {
                console.error("No se encontraron el botón o el modal.");
            }
        });

    </script>


    <script>
        //js para mensaje de boton eliminar
        document.addEventListener("DOMContentLoaded", function () {
            const botonesEliminar = document.querySelectorAll(".btnEliminarCliente");

            botonesEliminar.forEach(boton => {
                boton.addEventListener("click", function () {
                    const formulario = this.closest("form");

                    Swal.fire({
                        title: '¿Estás seguro?',
                        text: "Este cliente será eliminado permanentemente.",
                        icon: 'warning',
                        showCancelButton: true,
                        confirmButtonColor: '#d33',
                        cancelButtonColor: '#6c757d',
                        confirmButtonText: 'Sí, eliminar',
                        cancelButtonText: 'Cancelar'
                    }).then((result) => {
                        if (result.isConfirmed) {
                            formulario.submit();
                        }
                    });
                });
            });
        });
    </script>


    <script>

        //js para detalles
        $(document).ready(function () {
            console.log("El script de detalles se está ejecutando."); // Verifica si el script se carga

            $(".btnVerDetalles").click(function () {
                console.log("Se hizo clic en el botón Detalles."); // Verifica si el evento de clic se dispara
                var ClienteID = $(this).data("cliente-id");
                console.log("ID del cliente:", ClienteID); // Verifica si se obtiene el ID correctamente
                $.ajax({
                    url: '@Url.Action("MostrarDetallesCliente", "Cliente")',
                    type: 'GET',
                    data: { id: ClienteID },
                    success: function (data) {
                        $("#detallesCliente").html(data);
                    },
                    error: function (error) {
                        console.error("Error al cargar los detalles:", error);
                        $("#detallesCliente").html("<p>Error al cargar los detalles del Cliente.</p>");
                    }
                });
            });
        });
    </script>


}