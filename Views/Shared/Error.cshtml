
<!DOCTYPE html>

<html>

<head>

    <meta charset="utf-8" />

    <meta name="viewport" content="width=device-width" />

    <title>@ViewBag.Title - My ASP.NET Application</title>

    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet">

    <link href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.10.5/font/bootstrap-icons.css" rel="stylesheet">

    <style>

                #main-content {
                        margin-left: 0;
                        transition: margin-left 0.3s ease-in-out;
                        width: 100%;

        }



                    #main-content.expanded {
                            margin-left: 240px; /* ← AQUÍ es donde haces que el contenido se mueva a la derecha */


        }


    </style>

</head>

<body>

    <div id="wrapper">







        <!-- Contenido principal -->

        <div id="main-content">

            <h1 class="display-4">Panel de Inicio</h1>

            <p class="lead">Bienvenido al sistema de inventario de periféricos.</p>



            <div class="container-fluid pt-4">

                <div class="row">

                    <!-- Tarjeta 1 -->

                    <div class="col-md-4 mb-4">

                        <div class="card text-white h-100 shadow rounded-4" style="background-color:#4b0081;">

                            <div class="card-body">

                                <div class="d-flex align-items-center mb-2">

                                    <i class="fas fa-users me-2 fs-3"></i>

                                    <h5 class="card-title mb-0">Total de Usuarios</h5>

                                </div>

                                <p class="card-text fs-4 fw-bold">@ViewBag.totalUsuarios </p>

                            </div>

                        </div>

                    </div>

                    <!-- Tarjeta 2 -->

                    <div class="col-md-4 mb-4">

                        <div class="card text-white h-100 shadow rounded-4" style="background-color: #4A90E2;">

                            <div class="card-body">

                                <div class="d-flex align-items-center mb-2">

                                    <i class="bi bi-boxes me-2 fs-3"></i>

                                    <h5 class="card-title mb-0">Total de Productos</h5>

                                </div>

                                <p class="card-text fs-4 fw-bold"></p>

                            </div>

                        </div>

                    </div>

                    <!-- Tarjeta 3 -->

                    <div class="col-md-4 mb-4">

                        <div class="card text-white h-100 shadow rounded-4" style="background-color: #4A90E2;">

                            <div class="card-body">

                                <div class="d-flex align-items-center mb-2">

                                    <i class="bi bi-boxes me-2 fs-3"></i>

                                    <h5 class="card-title mb-0">Total de Productos</h5>

                                </div>

                                <p class="card-text fs-4 fw-bold">@ViewBag.totalproductos</p>

                            </div>

                        </div>

                    </div>

                    <!-- Tarjeta 4 -->

                    <div class="col-md-4 mb-4">

                        <div class="card text-white h-100 shadow rounded-4" style="background-color: #4A90E2;">

                            <div class="card-body">

                                <div class="d-flex align-items-center mb-2">

                                    <i class="bi bi-boxes me-2 fs-3"></i>

                                    <h5 class="card-title mb-0">Total de Productos</h5>

                                </div>

                                <p class="card-text fs-4 fw-bold">@ViewBag.totalproductos</p>

                            </div>

                        </div>

                    </div>



                    <!-- Tarjeta 5 -->

                    <div class="col-md-4 mb-4">

                        <div class="card text-white h-100 shadow rounded-4" style="background-color: #7B61FF;">

                            <div class="card-body">

                                <div class="d-flex align-items-center mb-2">



                                    <h5 class="card-title mb-0">

                                        @if (@ViewBag.totalstock <= 300)

                                        {

                                            <span><i class="bi bi-exclamation-triangle me-2 fs-3"></i>Bajo Stock</span>

                                        }

                                        else

                                        {

                                            <span><i class="bi bi-check-circle-fill me-2 fs-3 text-success"></i>Alto Stock</span>



                                        }

                                    </h5>

                                </div>

                                <p class="card-text fs-4 fw-bold">@ViewBag.totalstock</p>

                            </div>

                        </div>

                    </div>

                    <!-- Tarjeta 6 -->

                    <div class="col-md-4 mb-4">

                        <div class="card text-white h-100 shadow rounded-4" style="background-color: #2D3E50;">

                            <div class="card-body">

                                <div class="d-flex align-items-center mb-2">

                                    <i class="bi bi-currency-dollar me-2 fs-3"></i>

                                    <h5 class="card-title mb-0">Ventas del Mes</h5>

                                </div>

                                <p class="card-text fs-4 fw-bold">S/. 12,500</p>

                            </div>

                        </div>

                    </div>

                </div> <!-- /.row -->

            </div> <!-- /.container -->

        </div> <!-- /#main-content -->

    </div> <!-- /#wrapper -->
    <!-- Scripts -->



</body>

</html>