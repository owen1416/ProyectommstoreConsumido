odel ProyectommstoreConsumido.Models.Productos

@{
    ViewBag.Title = "Registrar Nuevo Producto";
}

<h2 class="mb-4 text-light"><i class="bi bi-plus-circle-fill me-2"></i> Registrar Nuevo Producto</h2>

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()

    <div class="shadow rounded-4 p-4 text-white" style="background-color: #343a40; max-width: 400px; margin: 0 auto;">
        <h5 class="mb-3"><i class="bi bi-info-circle-fill me-2"></i> Detalles del Producto</h5>
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })

        <div class="mb-2">
            <label asp-for="Nombre" class="form-label"><i class="bi bi-tag-fill me-2"></i> Nombre</label>
            @Html.EditorFor(model => model.Nombre, new { htmlAttributes = new { @class = "form-control rounded-pill form-control-sm", placeholder = "Nombre" } })
            @Html.ValidationMessageFor(model => model.Nombre, "", new { @class = "text-danger" })
        </div>

        <div class="mb-2">
            <label asp-for="Marca" class="form-label"><i class="bi bi-bookmark-fill me-2"></i> Marca</label>
            @Html.EditorFor(model => model.Marca, new { htmlAttributes = new { @class = "form-control rounded-pill form-control-sm", placeholder = "Marca" } })
            @Html.ValidationMessageFor(model => model.Marca, "", new { @class = "text-danger" })
        </div>

        <div class="mb-2">
            <label asp-for="Modelo" class="form-label"><i class="bi bi-layers-fill me-2"></i> Modelo</label>
            @Html.EditorFor(model => model.Modelo, new { htmlAttributes = new { @class = "form-control rounded-pill form-control-sm", placeholder = "Modelo" } })
            @Html.ValidationMessageFor(model => model.Modelo, "", new { @class = "text-danger" })
        </div>

        <div class="mb-2">
            <label asp-for="Descripcion" class="form-label"><i class="bi bi-file-text-fill me-2"></i> Descripción</label>
            @Html.EditorFor(model => model.Descripcion, new { htmlAttributes = new { @class = "form-control rounded-pill form-control-sm", rows = "2", placeholder = "Descripción" } })
            @Html.ValidationMessageFor(model => model.Descripcion, "", new { @class = "text-danger" })
        </div>

        <div class="mb-2">
            <label asp-for="Precio" class="form-label"><i class="bi bi-cash-coin me-2"></i> Precio</label>
            @Html.EditorFor(model => model.Precio, new { htmlAttributes = new { @class = "form-control rounded-pill form-control-sm", type = "number", step = "0.01", placeholder = "Precio" } })
            @Html.ValidationMessageFor(model => model.Precio, "", new { @class = "text-danger" })
        </div>

        <div class="mb-2">
            <label asp-for="Stock" class="form-label"><i class="bi bi-box-seam-fill me-2"></i> Stock</label>
            @Html.EditorFor(model => model.Stock, new { htmlAttributes = new { @class = "form-control rounded-pill form-control-sm", type = "number", min = "0", placeholder = "Stock" } })
            @Html.ValidationMessageFor(model => model.Stock, "", new { @class = "text-danger" })
        </div>

        <div class="mb-2">
            <label asp-for="Categoria" class="form-label"><i class="bi bi-folder-fill me-2"></i> Categoría</label>
            @Html.EditorFor(model => model.Categoria, new { htmlAttributes = new { @class = "form-control rounded-pill form-control-sm", placeholder = "Categoría" } })
            @Html.ValidationMessageFor(model => model.Categoria, "", new { @class = "text-danger" })
        </div>

        <div class="d-grid mt-3">
            <button type="submit" class="btn btn-primary rounded-pill btn-sm"><i class="bi bi-save-fill me-2"></i> Registrar</button>
        </div>
    </div>
}

<div class="mt-3 text-center">
    @Html.ActionLink("Volver", "PRODUCTO_LISTADO", null, new { @class = "btn btn-outline-light rounded-pill btn-sm" })
</div>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}