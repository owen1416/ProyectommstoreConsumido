@model ProyectommstoreConsumido.Models.RegistroViewModel

<div class="modal fade custom-modal" id="crearUsuarioModal" tabindex="-1" role="dialog" aria-labelledby="crearUsuarioModalLabel" aria-hidden="true">
    <div class="modal-dialog modal-dialog-centered" role="document">
        <div class="modal-content custom-modal-content">
            <div class="modal-header custom-modal-header">
                <h5 class="modal-title" id="crearUsuarioModalLabel"><i class="bi bi-plus-circle-fill me-2"></i> Registrar Nuevo Usuario</h5>

            </div>
            <div class="modal-body custom-modal-body">
                @using (Html.BeginForm("USUARIO_INSERTADO", "Usuario", FormMethod.Post, new { id = "crearUsuarioForm" }))
                {
                    @Html.AntiForgeryToken()
                    @Html.ValidationSummary(true, "", new { @class = "text-danger" })



                    <div class="mb-2">
                        <label for="Nombre" class="form-label"><i class="bi bi-person"></i> Nombre </label>
                        @Html.EditorFor(model => model.NombreUsuario, new { htmlAttributes = new { @class = "form-control rounded-pill form-control-sm", placeholder = "Nombre" } })
                        @Html.ValidationMessageFor(model => model.NombreUsuario, "", new { @class = "text-danger" })
                    </div>

                    <div class="mb-2">
                        <label for="Contraseña" class="form-label"><i class="bi bi-shield-lock-fill"></i> Contraseña</label>
                        @Html.EditorFor(model => model.Contraseña, new { htmlAttributes = new { @class = "form-control rounded-pill form-control-sm", placeholder = "Contraseña" } })
                        @Html.ValidationMessageFor(model => model.Contraseña, "", new { @class = "text-danger" })
                    </div>

                    <div class="mb-2">
                        <label for="Confirmar Contraseña" class="form-label"><i class="bi bi-shield-lock-fill"></i> Confirmar Contraseña</label>
                        @Html.EditorFor(model => model.ConfirmarContraseña, new { htmlAttributes = new { @class = "form-control rounded-pill form-control-sm", placeholder = "ConfirmarContraseña" } })
                        @Html.ValidationMessageFor(model => model.ConfirmarContraseña, "", new { @class = "text-danger" })
                    </div>

                    <div class="mb-2">
                        <label for="Email" class="form-label"><i class="bi bi-envelope-fill"></i>Email</label>
                        @Html.EditorFor(model => model.Email, new { htmlAttributes = new { @class = "form-control rounded-pill form-control-sm", placeholder = "Email" } })
                        @Html.ValidationMessageFor(model => model.Email, "", new { @class = "text-danger" })
                    </div>

                    <div class="modal-footer custom-modal-footer d-flex justify-content-center gap-3">
                        <button type="submit" class="btn btn-primary rounded-pill btn-lg"><i class="bi bi-save-fill me-2"></i> Registrar</button>
                        <button type="button" data-bs-dismiss="modal" aria-label="Cerrar" class="btn btn-danger rounded-pill btn-lg"><i class="bi bi-x-circle-fill me-2"></i> Cancelar</button>
                    </div>
                }
            </div>

        </div>
    </div>
</div>