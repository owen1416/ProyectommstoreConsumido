    }

        .form-control:focus {
            border-color: #007bff;
            box-shadow: 0 0 0 0.2rem rgba(0, 123, 255, 0.25);
        }

    .text-danger {
        font-size: 0.8rem;
        color: #dc3545;
        margin-top: 0.15rem;
    }

    .d-grid .btn-primary {
        padding: 0.7rem 1.4rem;
