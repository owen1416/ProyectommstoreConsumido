@model ProyectommstoreConsumido.Models.Productos

@if (Model != null)
{
    <div class="table-responsive">
        <table class="table table-hover">
            <thead>
                <tr>
                    <th>Campo</th>
                    <th>Valor</th>
                </tr>
            </thead>
            <tbody>
                <tr>
                    <td><strong>Nombre:</strong></td>
                    <td>@Model.Nombre</td>
                </tr>
                <tr>
                    <td><strong>Marca:</strong></td>
                    <td>@Model.Marca</td>
                </tr>
                <tr>
                    <td><strong>Modelo:</strong></td>
                    <td>@Model.Modelo</td>
                </tr>
                <tr>
                    <td><strong>Precio:</strong></td>
                    <td>@Model.Precio.ToString("C")</td>
                </tr>
                <tr>
                    <td><strong>Stock:</strong></td>
                    <td>@Model.Stock</td>
                </tr>
                <tr>
                    <td><strong>Categoría:</strong></td>
                    <td>@Model.Categoria</td>
                </tr>
            </tbody>
        </table>
    </div>
    <button type="button" class="btn btn-sm btn-outline-danger mt-2" onclick="$('#detallesProducto').empty();">Cerrar Detalles</button>
}
else
{
    <div class="alert alert-warning" role="alert">
        No se encontraron detalles para este producto.
    </div>
}
