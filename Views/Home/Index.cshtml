<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width" />
    <title>@ViewBag.Title - My ASP.NET Application</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.10.5/font/bootstrap-icons.css" rel="stylesheet">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0/css/all.min.css" integrity="..." crossorigin="anonymous" referrerpolicy="no-referrer" />
    <style>
        body {
            overflow-y: hidden; /* Oculta la barra de desplazamiento vertical */
        }

        #main-content {
            margin-left: auto;
            margin-right: auto;
        }

        .card-body {
            display: flex;
            flex-direction: column;
            justify-content: center;
            align-items: center;
            text-align: center;
        }

        .card-title {
            text-align: center;
        }

        .card-text {
            text-align: center;
        }

        .fs-1 {
            font-size: 3rem !important;
        }
    </style>
</head>

<body>
    <div id="wrapper">
        <div id="main-content" class="container">
            <h1 class="display-4 text-center">Panel de Inicio</h1>
            <p class="lead text-center">Bienvenido al sistema de inventario de periféricos.</p>

            <div class="pt-4">
                <div class="row justify-content-center">
                    <div class="col-md-4 mb-4">
                        <div class="card text-white h-100 shadow rounded-4" style="background-color:#6f42c1;">
                            <div class="card-body d-flex flex-column justify-content-center align-items-center">
                                <h5 class="card-title mb-2 text-center">Usuarios</h5>
                                <i class="fas fa-users fs-1 mb-2"></i>
                                <p class="card-text fs-3 fw-bold text-center">@ViewBag.TotalUsuarios</p>
                                <hr style="width: 50%; border-top: 2px solid white; opacity: 0.8;">
                                <a href="@Url.Action("USUARIO_LISTADO", "Usuario")" style="color: white; text-decoration: none; margin-top: 10px;">Más Info <i class="bi bi-arrow-right-circle-fill"></i></a>
                            </div>
                        </div>
                    </div>

                    <div class="col-md-4 mb-4">
                        <div class="card text-white h-100 shadow rounded-4" style="background-color:#e83e8c;">
                            <div class="card-body d-flex flex-column justify-content-center align-items-center">
                                <h5 class="card-title mb-2 text-center">Productos</h5>
                                <i class="bi bi-boxes fs-1 mb-2"></i>
                                <p class="card-text fs-3 fw-bold text-center">@ViewBag.TotalProductos</p>
                                <hr style="width: 50%; border-top: 2px solid white; opacity: 0.8;">
                                <a href="@Url.Action("PRODUCTO_LISTADO", "Producto")" style="color: white; text-decoration: none; margin-top: 10px;">Más Info <i class="bi bi-arrow-right-circle-fill"></i></a>
                            </div>
                        </div>
                    </div>

                    <div class="col-md-4 mb-4">
                        <div class="card text-white h-100 shadow rounded-4" style="background-color:#28a745;">
                            <div class="card-body d-flex flex-column justify-content-center align-items-center">
                                <h5 class="card-title mb-2 text-center">Stock</h5>
                                @if (@ViewBag.totalstock <= 300)
                                {
                                    <span><i class="bi bi-exclamation-triangle fs-1 mb-2"></i></span>
                                }
                                else
                                {
                                    <span><i class="bi bi-check-circle-fill fs-1 mb-2 text-success"></i></span>
                                }
                                <p class="card-text fs-3 fw-bold text-center">@ViewBag.totalstock </p>
                                <hr style="width: 50%; border-top: 2px solid white; opacity: 0.8;">
                                <a href="#" style="color: white; text-decoration: none; margin-top: 10px;">Más Info <i class="bi bi-arrow-right-circle-fill"></i></a>
                            </div>
                        </div>
                    </div>

                    <div class="col-md-4 mb-4">
                        <div class="card text-white h-100 shadow rounded-4" style="background-color:#ffc107;">
                            <div class="card-body d-flex flex-column justify-content-center align-items-center">
                                <h5 class="card-title mb-2 text-center">Categorías</h5>
                                <i class="bi bi-tag fs-1 mb-2"></i>
                                <p class="card-text fs-3 fw-bold text-center">@ViewBag.totalCategorias </p>
                                <hr style="width: 50%; border-top: 2px solid white; opacity: 0.8;">
                                <a href="#" style="color: white; text-decoration: none; margin-top: 10px;">Más Info <i class="bi bi-arrow-right-circle-fill"></i></a>
                            </div>
                        </div>
                    </div>

                    <div class="col-md-4 mb-4">
                        <div class="card text-white h-100 shadow rounded-4" style="background-color:#007bff;">
                            <div class="card-body d-flex flex-column justify-content-center align-items-center">
                                <h5 class="card-title mb-2 text-center">Clientes</h5>
                                <i class="bi bi-person-fill fs-1 mb-2"></i>
                                <p class="card-text fs-3 fw-bold text-center">@ViewBag.totalClientes</p>
                                <hr style="width: 50%; border-top: 2px solid white; opacity: 0.8;">
                                <a href="@Url.Action("CLIENTE_LISTADO", "Cliente")" style="color: white; text-decoration: none; margin-top: 10px;">Más Info <i class="bi bi-arrow-right-circle-fill"></i></a>
                            </div>
                        </div>
                    </div>

                    <div class="col-md-4 mb-4">
                        <div class="card text-white h-100 shadow rounded-4" style="background-color:#17a2b8;">
                            <div class="card-body d-flex flex-column justify-content-center align-items-center">
                                <h5 class="card-title mb-2 text-center">Ventas</h5>
                                <i class="bi bi-cart-fill fs-1 mb-2"></i>
                                <p class="card-text fs-3 fw-bold text-center">@ViewBag.totalVentas </p>
                                <hr style="width: 50%; border-top: 2px solid white; opacity: 0.8;">
                                <a href="" style="color: white; text-decoration: none; margin-top: 10px;">Más Info <i class="bi bi-arrow-right-circle-fill"></i></a>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</body>